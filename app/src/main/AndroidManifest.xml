<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lnmiit.madclub.crozword">

    <application
        android:allowBackup="true"
        android:icon="@drawable/word"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="lnmiit.madclub.crozword.ui.GameActivity"
            android:label="@string/title_activity_launch_screen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="lnmiit.madclub.crozword.ui.DashboardActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="lnmiit.madclub.crozword.ui.InstructionsActivity"
            android:label="@string/title_activity_instructions" >
        </activity>
    </application>

</manifest>
